<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.winter.app.departments.DepartmentDAO">
 	
 	<delete id="delete" parameterType="com.winter.app.departments.DepartmentDAO">
 		DELETE DEPARTMENTS WHERE DEPARTMENT_ID =#{department_id}
 	</delete>
 	
 	<!-- update -->
 	<update id="update" parameterType="com.winter.app.departments.DepartmentDAO">
 		UPDATE DEPARTMENTS SET 
 		
 		DEPARTMENT_NAME =#{department_name},
 		MANAGER_ID =  #{manager_id},
 		LOCATION_ID = #{location_id}
 		WHERE DEPARTMENT_ID =#{department_id}
 	</update>
 	
 	<!-- add -->
 	<insert id="add" parameterType="com.winter.app.departments.DepartmentDAO">
 		INSERT INTO DEPARTMENTS 
		VALUES(#{department_id}, #{department_name}, #{manager_id}, #{location_id})
 	</insert>
 	
  	<!-- detail  -->
  	<select id="getDetail" resultType="com.winter.app.departments.DepartmentDTO" parameterType="com.winter.app.departments.DepartmentDTO">
  		SELECT * FROM DEPARTMENTS WHERE DEPARTMENT_ID = #{department_id}
  	</select>
 	<!-- list -->
 	<select id="getList" resultType="com.winter.app.departments.DepartmentDTO">
 		SELECT * FROM DEPARTMENTS
 	</select>
 
 </mapper>